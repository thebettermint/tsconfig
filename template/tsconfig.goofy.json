{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Goofy",
  "exclude": ["node_modules"],
  "include": ["src/**/*", "types/**/*"],
  "buildOptions": {},
  "watchOptions": {},
  "typeAcquisition": {},

  "compilerOptions": {
    "module": "ESNext",

    "strict": true,
    "noImplicitAny":true,
    "noImplicitReturns":true,
    "moduleResolution":"Node",


    "baseUrl":"./",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop":true,
    "forceConsistentCasingInFileNames":true,

    "outDir": "dist/goofy/js",

    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",

    "lib": [
      "DOM",
      "ESNext"
    ],

    "target": "ESNext",


    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/goofy/tsbuildinfo",

 
    "preserveWatchOutput": false,
    "pretty": true,


    "skipLibCheck": true,

    "assumeChangesOnlyAffectDirectDependencies": true
  }
}